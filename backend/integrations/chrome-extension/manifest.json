{
  "manifest_version": 3,
  "name": "Enchiridion",
  "version": "1.0",
  "description": "Save pages and selections to Enchiridion",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Save to Enchiridion",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}